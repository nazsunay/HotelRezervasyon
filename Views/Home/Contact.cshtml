@{
    Layout = "_Layout";
}




<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="contact-text">
                    <h2>İletişim Bilgisi</h2>
                   
                    <table>
                        <tbody>
                            <tr>
                                <td class="c-o">Address:</td>
                                <td>Kağıthane Otel, Merkez, Nagihan Sokağı No:3, 34406 Kağıthane/İstanbul</td>
                            </tr>
                            <tr>
                                <td class="c-o">Telefon:</td>
