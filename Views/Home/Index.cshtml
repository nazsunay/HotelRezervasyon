@model WebApplication3.Models.ReservationViewModel
@{
    Layout = "_Layout";
}
<head>
    <style>
        .room-item img {
            max-height: 300px;
            object-fit: cover;
        }

        .ri-text {
            padding: 15px;
            text-align: center;
        }

        .carousel-inner {
            margin: 0 auto;
        }

        .blog-item {
            background-size: cover;
            background-position: center;
            height: 300px; /* Yüksekliği ayarlayın */
            width: 100%; /* Genişliği ayarlayın */
            border-radius: 10px; /* Kenarları yuvarlayın */
            overflow: hidden; /* Taşan kısımları gizle */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Gölgelendirme */
            transition: transform 0.3s; /* Geçiş efekti */
        }

            .blog-item:hover {
                transform: scale(1.05); /* Hover efekti */
            }

        .bi-text {
            position: relative;
            color: white; /* Metin rengini beyaz yap */
            padding: 20px; /* İç boşluk ayarlayın */
            background: rgba(0, 0, 0, 0.5); /* Arka plan rengi */
            border-radius: 10px; /* Kenarları yuvarlayın */
            bottom: 0; /* Aşağıda konumlandır */
            width: 100%; /* Genişliği ayarlayın */
        }
    </style>
</head>

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Kağıthane Resort Hotel</h1>
                    <p>
                        "İstanbul’un hızla gelişen merkezi Kağıthane’de yer alan otelimiz, hem iş seyahatleri hem de keyifli tatiller için ideal bir konum sunar. Şehrin önemli noktalarına yakınlığıyla dikkat çeken otelimiz, size konforlu ve ulaşımı kolay bir konaklama deneyimi vaat ediyor."
                    </p>
                    <a href="~/rooms.html" class="primary-btn">Odaları Keşfet</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Otelimizdeki tüm odalarımızı keşfedin</h3>
                    <form method="post" action="@Url.Action("CheckAvailability", "Home")">
                        <div class="check-date">
                            <label for="date-in">Check In:</label>
                            <input type="date" name="checkInDate" id="date-in" required />
                        </div>
                        <div class="check-date">
                            <label for="date-out">Check Out:</label>
                            <input type="date" name="checkOutDate" id="date-out" required />
                        </div>
                        <div class="select-option">
                            <label for="room">Room:</label>
                            <select id="room" name="RoomId" required>
                                @if (Model.Rooms != null && Model.Rooms.Any())
                                {
                                    foreach (var room in Model.Rooms)
                                    {
                                        <option value="@room.Id">@room.RoomName - @room.Capacity people</option>
                                    }
                                }
                                else
                                {
                                    <option disabled>Müsait oda yok</option>
                                }
                            </select>
                        </div>
                        <button type="submit">Uygunluğu Kontrol Et</button>
                    </form>

                    @if (TempData["NoAvailableRooms"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["NoAvailableRooms"]
                        </div>
                    }

                </div>
            </div>


               
            </div>

    </div>
   

        

    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/img/hero/hero-3.jpg"></div>
    </div>
</section>
<!-- Hero Section End -->


<!-- Services Section End -->
<section class="services-section spad">
